@namespace SampleWasmProject.Components.Core.Checkbox
@inherits ShadcnComponentBase

<label class="@GetLabelClass()" data-invalid="@(Invalid ? "true" : null)" data-disabled="@(Disabled ? "true" : null)">
    <button
        type="button"
        role="checkbox"
        aria-checked="@GetAriaChecked()"
        aria-invalid="@(Invalid ? "true" : "false")"
        data-slot="checkbox"
        data-state="@(Checked ? "checked" : "unchecked")"
        data-size="@Size"
        class="@GetClass()"
        disabled="@Disabled"
        @onclick="HandleClick"
        @attributes="AdditionalAttributes">
        <span
            data-slot="checkbox-indicator"
            class="@GetIndicatorClass()">
            <svg class="@GetCheckmarkClass()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
        </span>
    </button>
    @ChildContent
</label>

