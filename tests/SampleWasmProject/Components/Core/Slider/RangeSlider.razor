@namespace SampleWasmProject.Components.Core.Slider
@inherits SliderBase

<div
    data-slot="range-slider"
    data-size="@Size.ToString().ToLower()"
    class="@GetContainerClass()"
    @attributes="AdditionalAttributes">
    <div class="pointer-events-none absolute top-1/2 left-0 right-0 -translate-y-1/2 rounded-full bg-muted/40" style="@GetTrackStyle()"></div>
    <div class="pointer-events-none absolute top-1/2 -translate-y-1/2 rounded-full bg-primary" style="@GetSelectedRangeStyle()"></div>

    <div class="pointer-events-none absolute top-1/2 -translate-y-1/2 rounded-full border border-border bg-foreground shadow-xs" style="@GetLowerThumbStyle()"></div>
    <div class="pointer-events-none absolute top-1/2 -translate-y-1/2 rounded-full border border-border bg-foreground shadow-xs" style="@GetUpperThumbStyle()"></div>

    <input
        type="range"
        min="@Min"
        max="@Max"
        step="@Step"
        value="@LowerValue"
        aria-label="@LowerAriaLabel"
        disabled="@Disabled"
        class="@GetInputClass()"
        style="@GetLowerInputStyle()"
        @oninput="HandleLowerInput"
        @onchange="HandleLowerChange" />

    <input
        type="range"
        min="@Min"
        max="@Max"
        step="@Step"
        value="@UpperValue"
        aria-label="@UpperAriaLabel"
        disabled="@Disabled"
        class="@GetInputClass()"
        style="@GetUpperInputStyle()"
        @oninput="HandleUpperInput"
        @onchange="HandleUpperChange" />
</div>
