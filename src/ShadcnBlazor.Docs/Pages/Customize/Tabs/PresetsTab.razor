<div class="h-full overflow-y-auto scrollbar-hide pr-1">
    <div class="rounded-lg border border-border bg-card p-3 flex flex-col min-h-full">
        <div class="space-y-1.5">
            @foreach (var item in TopItems)
            {
                <div class="flex items-center justify-between rounded-md px-2 py-1.5 hover:bg-muted/20 transition-colors" @key="item.Label">
                    <div class="min-w-0">
                        <div class="text-[11px] text-muted-foreground leading-tight">@item.Label</div>
                        <div class="text-sm font-semibold text-foreground leading-tight truncate">@item.Value</div>
                    </div>
                    <div class="ml-3 text-muted-foreground/90 shrink-0">
                        @item.Icon
                    </div>
                </div>
            }
        </div>

        <div class="mt-auto pt-4 space-y-1.5">
            @foreach (var item in BottomItems)
            {
                <div class="flex items-center justify-between rounded-md px-2 py-1.5 hover:bg-muted/20 transition-colors" @key="item.Label">
                    <div class="min-w-0">
                        <div class="text-[11px] text-muted-foreground leading-tight">@item.Label</div>
                        <div class="text-sm font-semibold text-foreground leading-tight truncate">@item.Value</div>
                    </div>
                    <div class="ml-3 text-muted-foreground/90 shrink-0">
                        @item.Icon
                    </div>
                </div>
            }
        </div>
    </div>
</div>
