@page "/samples"
@inject ShadcnBlazor.Docs.Services.PageTocService TocService

<PageTitle>Samples - ShadcnBlazor</PageTitle>

<div class="flex flex-col gap-8 min-w-0">
    <div class="flex flex-col gap-1">
        <h1 class="text-3xl font-bold">Samples</h1>
        <p class="text-base text-muted-foreground">
            Full-featured sample applications built with ShadcnBlazor components. Use these as inspiration or starting points for your own projects.
        </p>
    </div>

    <div class="grid grid-cols-3 gap-x-12 gap-y-6">
        @foreach (var sample in SampleRegistry.SamplesList)
        {
            <a href="samples/@sample.Slug"
               class="block w-full text-left text-base font-medium text-foreground/70 hover:text-foreground hover:underline py-1 transition-colors">
                @sample.Name
            </a>
        }
    </div>
</div>

@code {
    [Inject]
    public required SampleRegistryService SampleRegistry { get; set; }

    protected override void OnInitialized() => TocService.Clear();
}
