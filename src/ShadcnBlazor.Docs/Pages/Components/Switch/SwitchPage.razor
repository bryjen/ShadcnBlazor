@page "/components/switch"
@using System.Reflection
@using ShadcnBlazor.Docs.Pages.Components.Switch.Examples
@using ShadcnBlazor.Docs.Services

<ComponentDocPage Metadata="@Metadata"
                 InstallOptions="@InstallOptions"
                 ApiDoc="@ApiDocumentation.Switch">
    <DocsSection Title="Usage" Id="usage">
        <p class="mb-3">The Switch component is a toggle for boolean on/off values. Use <code>ChildContent</code> for the label. Bind <code>Checked</code> for two-way state, or use <code>CheckedChanged</code> for one-way updates.</p>
        <ComponentPreview CodeFiles="@(new[] { Snippets.Components_Switch_Examples_SwitchBasicExample })">
            <SwitchBasicExample />
        </ComponentPreview>
    </DocsSection>

    <DocsSection Title="Examples" Id="examples">
        <DocsSubSection Title="Sizes" Id="sizes">
            <p class="mb-3">Use the <code>Size</code> parameter for Sm, Md, or Lg variants.</p>
            <ComponentPreview CodeFiles="@(new[] { Snippets.Components_Switch_Examples_SwitchSizeExample })">
                <SwitchSizeExample />
            </ComponentPreview>
        </DocsSubSection>
    </DocsSection>
</ComponentDocPage>

@code {
    private static readonly ComponentMetadata Metadata = ComponentRegistryService.GetMetadata("Switch");

    private static readonly Dictionary<string, string> InstallOptions = new()
    {
        ["shell"] = "shadcnblazor component add switch",
    };
}
