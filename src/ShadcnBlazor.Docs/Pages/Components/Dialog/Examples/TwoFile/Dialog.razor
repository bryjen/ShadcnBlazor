<div class="grid gap-4 py-4">
    <div class="grid gap-2">
        <label for="name" class="text-sm font-medium">Name</label>
        <Input id="name" @bind-Value="Name" placeholder="Your name" />
    </div>
</div>
<div class="flex justify-end gap-2 pt-4">
    <Button Variant="@Variant.Secondary" OnClick="OnCancel">Cancel</Button>
    <Button Variant="@Variant.Default" OnClick="OnSave">Save</Button>
</div>

@code {
    [CascadingParameter]
    public IDialogInstance? DialogInstance { get; set; }

    [Parameter]
    public string Name { get; set; } = "Jane";

    private void OnCancel() => DialogInstance?.Cancel();

    private void OnSave() => DialogInstance?.Close(DialogResult.Ok(Name));
}
