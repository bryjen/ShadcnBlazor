@page "/components/slider"
@using System.Reflection
@using ShadcnBlazor.Docs.Pages.Components.Slider.Examples
@using ShadcnBlazor.Docs.Services

<PageTitle>Slider - ShadcnBlazor</PageTitle>
<HeadContent>
    <meta name="description" content="ShadcnBlazor Slider - Slider control for selecting numeric values.">
</HeadContent>
<ComponentDocPage Metadata="@Metadata"
                 InstallOptions="@InstallOptions"
                 ApiDoc="@ApiDocumentation.Slider">
    <DocsSection Title="Usage" Id="usage">
        <p class="mb-3">The Slider component lets users select a value within a range. Use <code>Min</code>, <code>Max</code>, and <code>Step</code> to define the range. Bind <code>Value</code> for two-way binding.</p>
        <ComponentPreview CodeFiles="@(new[] { Snippets.Components_Slider_Examples_SliderBasicExample })">
            <SliderBasicExample />
        </ComponentPreview>
    </DocsSection>

    <DocsSection Title="Examples" Id="examples">
        <DocsSubSection Title="Range" Id="range">
            <p class="mb-3">Customize <code>Min</code>, <code>Max</code>, and <code>Step</code> for different value ranges.</p>
            <ComponentPreview CodeFiles="@(new[] { Snippets.Components_Slider_Examples_SliderRangeExample })">
                <SliderRangeExample />
            </ComponentPreview>
        </DocsSubSection>
    </DocsSection>
</ComponentDocPage>

@code {
    private static readonly ComponentMetadata Metadata = ComponentRegistryService.GetMetadata("Slider");

    private static readonly Dictionary<string, string> InstallOptions = new()
    {
        ["shell"] = "shadcnblazor component add slider",
    };
}
