@page "/components/alert"
@using System.Reflection
@using ShadcnBlazor.Docs.Pages.Components.Alert.Examples
@using ShadcnBlazor.Shared.Attributes

<ComponentDocPage Metadata="@Metadata"
                 InstallOptions="@InstallOptions"
                 ApiDoc="@ApiDocumentation.Alert">
    <DocsSection Title="Usage" Id="usage">
        <p class="mb-3">The Alert component displays important messages or notifications. Use <code>ChildContent</code> to render your message. Set <code>Variant</code> to <code>AlertVariant.Default</code> or <code>AlertVariant.Destructive</code> for different styling.</p>
        <ComponentPreview Code="@Snippets.AlertBasicExample" Language="razor">
            <AlertBasicExample />
        </ComponentPreview>
    </DocsSection>

    <DocsSection Title="Examples" Id="examples">
        <DocsSubSection Title="Variants" Id="variants">
            <p class="mb-3">Use the <code>Variant</code> parameter to switch between default and destructive styling for error or warning messages.</p>
            <ComponentPreview Code="@Snippets.AlertVariantExample" Language="razor">
                <AlertVariantExample />
            </ComponentPreview>
        </DocsSubSection>
    </DocsSection>
</ComponentDocPage>

@code {
    private static readonly ComponentMetadataAttribute Metadata = typeof(ShadcnBlazor.Components.Alert.Alert)
        .GetCustomAttribute<ComponentMetadataAttribute>()!;

    private static readonly Dictionary<string, string> InstallOptions = new()
    {
        ["dotnet"] = "shadcnblazor component add alert",
    };
}
