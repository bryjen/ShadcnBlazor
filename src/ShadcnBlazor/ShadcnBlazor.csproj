<Project Sdk="Microsoft.NET.Sdk.Razor">
    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <SupportedPlatform Include="browser"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="9.0.6"/>
        <PackageReference Include="TwMerge" Version="1.0.7" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Components\" />
        <Folder Include="wwwroot\js\" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Components/**/*.razor" />
        <EmbeddedResource Include="Components/**/*.razor.cs" />
        <EmbeddedResource Include="Components/**/*.razor.css" />
    </ItemGroup>

    <ItemGroup>
        <None Include="Components/**/*" CopyToOutputDirectory="Always" />
        <None Include="ComponentDependencies/**/*" CopyToOutputDirectory="Always" />
        <None Include="wwwroot/**/*" CopyToOutputDirectory="Always" />
        <None Include="_Imports.razor" CopyToOutputDirectory="Always" />
    </ItemGroup>

