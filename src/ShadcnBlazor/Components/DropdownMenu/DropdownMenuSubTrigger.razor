@inherits ShadcnComponentBase

<div role="menuitem"
     class="@MergeCss("dropdown-menu-item", Class)"
     @attributes="AdditionalAttributes">
    @ChildContent
    <span aria-hidden="true">›</span>
</div>

@code {
    [CascadingParameter]
    private DropdownMenuSubContext? Context { get; set; }

    /// <summary>
    /// The sub-trigger content.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private RenderFragment TriggerFragment => @<div role="menuitem" class="@MergeCss("dropdown-menu-item", Class)" @attributes="AdditionalAttributes">
        @ChildContent
        <span aria-hidden="true">›</span>
    </div>;

    protected override void OnInitialized()
    {
        Context?.RegisterTrigger(TriggerFragment);
    }
}
