@inherits ShadcnComponentBase

<input
    type="@Type"
    data-slot="input"
    data-size="@Size.ToString().ToLower()"
    class="@GetClass()"
    value="@Value"
    @oninput="HandleInput"
    @onchange="HandleChange"
    disabled="@Disabled"
    placeholder="@Placeholder"
    @attributes="GetAttributes()" />
