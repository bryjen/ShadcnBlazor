@inherits RadioSelectableComponentBase

<label class="@GetContainerClass()" data-invalid="@(Invalid ? "true" : null)" data-disabled="@(IsDisabled ? "true" : null)">
    <button
        type="button"
        role="radio"
        aria-checked="@GetAriaChecked()"
        aria-invalid="@(Invalid ? "true" : "false")"
        data-slot="radio"
        data-state="@(IsChecked ? "checked" : "unchecked")"
        data-size="@EffectiveSize"
        class="@GetClass()"
        disabled="@IsDisabled"
        @onclick="HandleClick"
        @attributes="AdditionalAttributes">
        <span
            data-slot="radio-indicator"
            class="@GetIndicatorClass()">
            <span class="@GetDotClass()"></span>
        </span>
    </button>
    @(LabelContent ?? ChildContent)
</label>




