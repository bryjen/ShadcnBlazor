@typeparam T

@using ShadcnBlazor.Components.Popover
@using ShadcnBlazor.Components.Popover.Models
@using ShadcnBlazor.Components.Select
@using ShadcnBlazor.Components.Select.Base

@inherits SelectBase<T>

@* does not render anything, it just allows the registry to be built *@
@if (ChildContent is not null)
{
    <CascadingValue Value="_declarativeRegistry">
        @ChildContent
    </CascadingValue>
}

<Popover Open="@_open"
         OpenChanged="HandleOpenChanged"
         CloseOnOutsideClick="true"
         LockScroll="@LockScroll"
         AnchorOrigin="PopoverPlacement.BottomLeft"
         TransformOrigin="PopoverPlacement.TopLeft"
         WidthMode="@(PopoverFitContent ? PopoverWidthMode.Adaptive : PopoverWidthMode.Relative)"
         AnchorClass="min-w-full max-w-full w-full">
    <Anchor>
        <button @ref="_triggerRef"
                id="@_triggerId"
                type="button"
                role="combobox"
                aria-expanded="@(_open ? "true" : "false")"
                aria-haspopup="listbox"
                aria-controls="@_listboxId"
                aria-activedescendant="@GetActiveDescendant()"
                aria-disabled="@Disabled"
                aria-label="@GetAriaLabel()"
                data-size="@Size.ToString().ToLower()"
                class="@GetTriggerClass()"
                disabled="@Disabled"
                @onclick="ToggleOpen"
                @onkeydown="HandleTriggerKeyDown"
                @onkeydown:preventDefault="true"
                @onkeydown:stopPropagation="true"
                @attributes="AdditionalAttributes">
            <span class="truncate">@GetDisplayText()</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="@(_open ? "rotate-180" : "") transition-transform duration-200">
                <path d="m6 9 6 6 6-6" />
            </svg>
        </button>
    </Anchor>
    <ChildContent>
        <div class="@GetContentClass() rounded-lg border border-input bg-popover text-popover-foreground shadow-lg p-1 min-w-[8rem]">
            @if (!string.IsNullOrEmpty(Label))
            {
                <div class="px-2 py-1.5 text-xs font-medium text-muted-foreground">@Label</div>
            }
            @if (Search)
            {
                <div class="flex items-center gap-1.5 px-2 py-1 border-b border-border mb-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 text-muted-foreground">
                        <circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/>
                    </svg>
                    <input @ref="_searchInputRef"
                           id="@_searchInputId"
                           type="text"
                           placeholder="Search..."
                           value="@_searchText"
                           aria-label="Search options"
                           aria-controls="@_listboxId"
                           aria-autocomplete="list"
                           class="w-full bg-transparent py-1 text-sm outline-none placeholder:text-muted-foreground"
                           @oninput="HandleSearchInput"
                           @onkeydown="HandleSearchKeyDown"
                           @onclick:stopPropagation="true" />
                </div>
            }
            <div id="@_listboxId"
                 role="listbox"
                 aria-multiselectable="true"
                 aria-labelledby="@_triggerId"
                 class="max-h-[var(--radix-select-content-available-height)] overflow-y-auto overflow-x-hidden">
                @{
                    var nodes = GetRenderNodes();
                    var itemNodes = nodes.Where(n => n.Kind != SelectNodeKind.Action).ToList();
                    var actionNodes = nodes.Where(n => n.Kind == SelectNodeKind.Action).ToList();
                    var actionStartIndex = nodes.Count - actionNodes.Count;
                }
                @for (var i = 0; i < itemNodes.Count; i++)
                {
                    var index = i;
                    var node = itemNodes[index];

                    if (node.Kind == SelectNodeKind.Label)
                    {
                        <div class="px-2 py-1.5 text-xs font-medium text-muted-foreground" role="presentation">@node.Text</div>
                        continue;
                    }

                    if (node.Kind == SelectNodeKind.Separator)
                    {
                        <div class="my-1 h-px bg-border" role="separator"></div>
                        continue;
                    }

                    var isSelected = IsSelected(node);
                    var isDisabled = node.Disabled;
                    var isActive = !isDisabled && _activeIndex == index;

                    <button type="button"
                            id="@GetOptionId(index)"
                            role="option"
                            tabindex="-1"
                            aria-checked="@isSelected.ToString().ToLower()"
                            aria-disabled="@isDisabled.ToString().ToLower()"
                            disabled="@isDisabled"
                            class="@GetOptionClass(isSelected, isActive, isDisabled)"
                            @onmouseenter="@(_ => HandleOptionMouseEnter(index))"
                            @onclick="() => SelectOptionAtIndexAsync(index)"
                            @onclick:stopPropagation="true">
                        @if (node.Render is not null)
                        {
                            @node.Render
                        }
                        else
                        {
                            <span class="size-4 shrink-0 flex items-center justify-center">
                                @if (isSelected)
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
                                        <polyline points="20 6 9 17 4 12" />
                                    </svg>
                                }
                            </span>
                            <span class="@(PopoverFitContent ? "whitespace-nowrap" : "truncate")">@node.Text</span>
                        }
                    </button>
                }
            </div>
            @if (actionNodes.Count > 0)
            {
                <div class="mt-1 border-t border-border pt-1">
                    @for (var i = 0; i < actionNodes.Count; i++)
                    {
                        var nodeIndex = actionStartIndex + i;
                        var actionNode = actionNodes[i];
                        var isActionActive = _activeIndex == nodeIndex;

                        <button type="button"
                                id="@GetOptionId(nodeIndex)"
                                role="button"
                                tabindex="-1"
                                aria-controls="@_listboxId"
                                class="@GetActionClass(isActionActive)"
                                @onmouseenter="@(_ => HandleOptionMouseEnter(nodeIndex))"
                                @onclick="() => SelectOptionAtIndexAsync(nodeIndex)"
                                @onclick:stopPropagation="true">
                            <span class="size-4 shrink-0"></span>
                            <span>@actionNode.Text</span>
                        </button>
                    }
                </div>
            }
        </div>
    </ChildContent>
</Popover>
